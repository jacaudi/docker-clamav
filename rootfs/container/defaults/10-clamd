DATA_PATH=${DATA_PATH:-"/data/"}
FRESHCLAM_SETUP_TYPE=${CLAMAV_SETUP_TYPE:-"AUTO"}
#

ALERT_BROKEN_EXECUTABLES=${ALERT_BROKEN_EXECUTABLES:-"FALSE"}
