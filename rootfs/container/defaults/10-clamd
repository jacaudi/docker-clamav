case "${LOG_TYPE,,}" in
    console )
        LOG_PATH="/dev/"
        LOG_FILE_CLAMD="null"
        LOG_FILE_FRESHCLAM="null"
    ;;
    file )
        exec_prefix=silent
    ;;
    none )
        LOG_PATH="/dev/"
        LOG_FILE_CLAMD="null"
        LOG_FILE_FRESHCLAM="null"
        exec_prefix=silent
    ;;
esac

get_defaults_advanced
